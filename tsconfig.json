  "compilerOptions": {
    "outDir": "./",
    "target": "es2018",
    "module": "commonjs",
    "lib": [ "es2018", "dom" ],
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    // Type definitions
    "declaration": true,
